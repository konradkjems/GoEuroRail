# Environment Variables Example
# Copy this file to .env.local and add your API keys

# OpenWeatherMap API - For weather forecasts
# Sign up at: https://openweathermap.org/api
NEXT_PUBLIC_OPENWEATHER_API_KEY=82e021ad7fd33cee0df0c1225a4d5da2

# TripAdvisor API - For attractions and restaurants
# Sign up at: https://developer.tripadvisor.com/
NEXT_PUBLIC_TRIPADVISOR_API_KEY=your_tripadvisor_key_here

# RapidAPI Hotels API - For accommodation data
# Subscribe at: https://rapidapi.com/apidojo/api/hotels4/
NEXT_PUBLIC_RAPIDAPI_KEY=your_rapidapi_key_here
NEXT_PUBLIC_RAPIDAPI_HOST=hotels4.p.rapidapi.com

# Numbeo API - For budget estimates and cost of living data
# Sign up at: https://www.numbeo.com/api/
NEXT_PUBLIC_NUMBEO_API_KEY=your_numbeo_key_here

# Google Places API - For additional attractions data
# Set up at: https://developers.google.com/maps/apis-by-platform
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=AIzaSyAYO64SUYgvwnJWbjKvYSHu3T4HpFVDQdY

# GetYourGuide - For bookable tours and activities
# Sign up at: https://partner.getyourguide.com
NEXT_PUBLIC_GETYOURGUIDE_PARTNER_ID=QUGIHFI

# Cache Settings
# Time in seconds for how long to cache API responses
CACHE_TTL_WEATHER=10800  # 3 hours
CACHE_TTL_HOTELS=86400   # 24 hours
CACHE_TTL_ATTRACTIONS=86400  # 24 hours

# API Keys
NEXT_PUBLIC_OPENWEATHERMAP_API_KEY=your_openweathermap_api_key
NEXT_PUBLIC_RAPIDAPI_KEY=your_rapidapi_key
NEXT_PUBLIC_GOOGLEPLACES_API_KEY=your_googleplaces_api_key
NEXT_PUBLIC_TRIPADVISOR_API_KEY=your_tripadvisor_api_key
NEXT_PUBLIC_OPENEXCHANGERATES_API_KEY=your_openexchangerates_api_key

# API URLs
NEXT_PUBLIC_OPENWEATHERMAP_BASE_URL=https://api.openweathermap.org/data/2.5
NEXT_PUBLIC_RAPIDAPI_HOST=tripadvisor16.p.rapidapi.com
NEXT_PUBLIC_GOOGLEPLACES_BASE_URL=https://maps.googleapis.com/maps/api/place

# Cache Settings
NEXT_PUBLIC_CACHE_TTL_WEATHER=3600 # 1 hour in seconds
NEXT_PUBLIC_CACHE_TTL_BUDGET=604800 # 7 days in seconds
NEXT_PUBLIC_CACHE_TTL_ATTRACTIONS=86400 # 1 day in seconds
NEXT_PUBLIC_CACHE_TTL_ACCOMMODATIONS=86400 # 1 day in seconds

# Database
MONGODB_URI=your_mongodb_connection_string
MONGODB_DB=goeurorail

# App Settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DEFAULT_CURRENCY=EUR
NEXT_PUBLIC_ENABLE_MOCK_DATA=true # Set to false in production
NEXT_PUBLIC_DEFAULT_MAP_CENTER=46.9,8.2 # Switzerland center
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=5

# Auth
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000 